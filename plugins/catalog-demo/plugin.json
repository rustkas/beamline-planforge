{
  "$schema": "planforge://schemas/plugin-manifest.schema.json",
  "manifest_version": "1.0",
  "id": "com.planforge.catalog.demo",
  "name": "Catalog Demo",
  "version": "0.1.0",
  "description": "Demo catalog plugin.",
  "license": "Apache-2.0",
  "publisher": { "name": "Kitchen PlanForge", "url": "https://planforge.dev" },
  "runtime": {
    "kind": "server",
    "entry": { "module": "dist/index.js" },
    "min_host_version": "0.1.0",
    "compatibility": { "core_contracts": "^0.1.0", "host_api": "^0.1.0" }
  },
  "capabilities": {
    "constraints": false,
    "solver": false,
    "pricing": false,
    "export": false,
    "ui": { "panels": [], "wizard_steps": [], "commands": [] }
  },
  "permissions": {
    "network": { "allow": false, "allowlist": [] },
    "storage": { "allow": false, "scopes": [] },
    "project_data": { "read": true, "write_via_patches": false },
    "catalog": { "read": true },
    "pricing": { "read": false },
    "orders": { "read": false, "write": false }
  },
  "integrity": {
    "channel": "oss",
    "signature": { "alg": "none", "value": "" },
    "hashes": {}
  },
  "configuration_schema": { "type": "object" }
}
