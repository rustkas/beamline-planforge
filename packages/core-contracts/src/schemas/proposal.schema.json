{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "planforge://schemas/proposal.schema.json",
  "title": "Proposal",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "proposal_id", "kind", "patch", "metrics", "explanations", "violations_summary"],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "proposal_id": { "type": "string", "minLength": 1 },
    "kind": { "enum": ["linear", "l", "u", "island"] },
    "patch": {
      "type": "object",
      "additionalProperties": false,
      "required": ["ops"],
      "properties": {
        "ops": {
          "type": "array",
          "items": { "$ref": "#/$defs/json_patch_op" }
        },
        "reason": { "type": "string" },
        "source": { "enum": ["user", "agent", "plugin"] }
      }
    },
    "metrics": { "$ref": "planforge://schemas/proposal_metrics.schema.json" },
    "explanations": {
      "type": "array",
      "items": { "$ref": "planforge://schemas/explanation.schema.json" }
    },
    "violations_summary": {
      "type": "array",
      "items": { "$ref": "#/$defs/violation_summary" }
    }
  },
  "$defs": {
    "json_patch_op": {
      "type": "object",
      "additionalProperties": false,
      "required": ["op", "path"],
      "properties": {
        "op": { "enum": ["add", "remove", "replace", "move", "copy", "test"] },
        "path": { "type": "string", "minLength": 1 },
        "value": {},
        "from": { "type": "string" }
      }
    },
    "violation_summary": {
      "type": "object",
      "additionalProperties": false,
      "required": ["code", "severity", "count"],
      "properties": {
        "code": { "type": "string", "minLength": 1 },
        "severity": { "enum": ["info", "warning", "error"] },
        "count": { "type": "integer", "minimum": 0 },
        "message": { "type": "string" },
        "object_ids": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
