{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "planforge://schemas/render_model.schema.json",
  "title": "RenderModel",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "nodes", "assets"],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "assets": {
      "type": "object",
      "additionalProperties": false,
      "required": ["gltf"],
      "properties": {
        "gltf": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "additionalProperties": false,
            "required": ["asset_id", "uri"],
            "properties": {
              "asset_id": { "type": "string", "minLength": 1 },
              "uri": { "type": "string", "minLength": 1 }
            }
          }
        }
      }
    },
    "nodes": {
      "type": "array",
      "items": { "$ref": "planforge://schemas/render_node.schema.json" }
    },
    "extensions": {
      "type": "object",
      "additionalProperties": { "type": "object" }
    }
  }
}
