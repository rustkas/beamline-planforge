{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "planforge://schemas/transform3d.schema.json",
  "title": "Transform3D",
  "type": "object",
  "additionalProperties": false,
  "required": ["position_m", "rotation_quat", "scale"],
  "properties": {
    "position_m": {
      "type": "object",
      "additionalProperties": false,
      "required": ["x", "y", "z"],
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" },
        "z": { "type": "number" }
      }
    },
    "rotation_quat": {
      "type": "object",
      "additionalProperties": false,
      "required": ["x", "y", "z", "w"],
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" },
        "z": { "type": "number" },
        "w": { "type": "number" }
      }
    },
    "scale": {
      "type": "object",
      "additionalProperties": false,
      "required": ["x", "y", "z"],
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" },
        "z": { "type": "number" }
      }
    }
  }
}
